<Window x:Class="SnippingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnippingTool"
        mc:Ignorable="d"
         Title="Snipping Tool" Height="286" Width="340" Closed="Window_Closed">
    <Grid ShowGridLines="False" x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="btnStart" Content="New" Click="btnStart_Click" Margin="5"/>
        <Image Grid.Row="1" x:Name="img" Margin="5"/>
    </Grid>

</Window>
